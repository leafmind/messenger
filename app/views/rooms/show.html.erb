<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @room.name %>
</p>

<div class="row">
<div id="messages" data-chat-room-id="<%= @room.id %>" class="col-md-12">
  <%= render partial: 'rooms/message', collection: @room.messages %>
</div>
</div>

<%= form_for @message, url: '#' do |f| %>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control' %>
    <small class="text-muted">From 2 to 1000 characters</small>
  </div>

  <%= f.submit "Post", class: 'btn btn-primary btn-lg' %>
<% end %>

<%= link_to 'Back', rooms_path %>
